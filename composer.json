{
    "name": "northcity/api",
    "description": "REST API for News Platform",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "firebase/php-jwt": "^6.8",
        "intervention/image": "^2.7",
        "league/oauth2-google": "^4.0",
        "monolog/monolog": "^3.4",
        "nesbot/carbon": "^2.68",
        "phpmailer/phpmailer": "^6.8",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "api/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "api/tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "post-install-cmd": [
            "php -r \"file_exists(\".env\") || copy(\".env.example\", \".env\");\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
